extends layout

block content
  h1 My shopping cart
  - var total=0;
    table.table
      thead
        tr
          th Name
          th Model
          th Price
          th Actions
      tbody
        each item in cart
          - total += item.price
          tr
            td=item.name
            td=item.model
            td=item.price
            td
              a(href="/products/cart/remove/"+item._id, class = "btn btn-danger") Remove Item
      tfoot
        tr
          th Total
          th="="
          th=total
